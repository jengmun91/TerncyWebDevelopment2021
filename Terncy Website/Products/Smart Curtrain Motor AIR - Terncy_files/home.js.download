$(".video-player").click(function () {
	$(".zhezhao").show()
	$("video").show()
	$(".player-box").show()
})
$(".player-video").click(function () {
	$(this).hide()
	if ($("video").hasClass('pause')) {
		$("video").trigger("play");
		$("video").removeClass('pause');
		$("video").addClass('play');
	} else {
		$("video").trigger("pause");
		$("video").removeClass('play');
		$("video").addClass('pause');
	}
})
